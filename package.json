{
  "name": "karin-plugin-ling",
  "version": "1.7.10",
  "author": "yusheng",
  "type": "module",
  "main": "lib/index.js",
  "description": "基于Karin编写的便携操作插件",
  "homepage": "https://github.com/yusheng929/karin-plugin-ling",
  "bugs": {
    "url": "https://github.com/yusheng929/karin-plugin-ling/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yusheng929/karin-plugin-ling.git"
  },
  "scripts": {
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "clean": "npm lib/cli/pr.js clean",
    "pub": "npm publish --access public",
    "pub-beta": "npm publish --tag beta",
    "pr": "node lib/cli/pr.js",
    "commit": "node lib/cli/commit.js",
    "sort": "npx sort-package-json",
    "dev": "tsx watch --include \"src/**/*.ts\" src/index.ts",
    "karin": "karin",
    "app": "karin app",
    "start": "karin start",
    "pm2": "karin pm2",
    "stop": "karin stop",
    "rs": "karin rs",
    "log": "karin log",
    "watch": "karin watch"
  },
  "dependencies": {
    "@karinjs/md-html": "^1.1.6",
    "punycode": "^2.3.1",
    "qrcode": "^1.5.4"
  },
  "karin": {
    "main": "src/index.ts",
    "apps": [
      "lib/apps",
      "lib/apps/events",
      "lib/apps/quickCode"
    ],
    "ts-apps": [
      "src/apps",
      "src/apps/events",
      "src/apps/quickCode"
    ],
    "static": [
      "resources"
    ],
    "files": [
      "config",
      "data",
      "resources"
    ],
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "lib/**/*",
      "@karinjs/**/*"
    ]
  },
  "files": [
    "/lib/**/*.js",
    "/lib/**/*.d.ts",
    "/config",
    "resources",
    "CHANGELOG.md",
    "LICENSE",
    "package.json",
    "README.md"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
}